<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/screen_color"
    android:layout_height="match_parent"
    tools:context=".Activities.UserSide.UserSideProfileCreation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginStart="270dp"
            android:layout_marginTop="50dp"
            android:id="@+id/userImageUploading"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userImageview"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/person_identity" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="90dp"
                android:layout_marginRight="5dp"
                android:background="@color/white"
                android:src="@drawable/ic_round_add_24" />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/userImageUploading"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="130dp"
            android:layout_marginTop="60dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/full_name"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/userFullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/corners_background"
                android:backgroundTint="@color/white"
                android:elevation="5dp"
                android:hint="@string/konta_bai"
                android:importantForAutofill="no"
                android:inputType="text"
                android:maxLength="15"
                android:maxLines="1"
               android:padding="15dp"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/phone_number"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/userPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/corners_background"
                android:elevation="5sp"
                android:hint="@string/custom_number"
                android:inputType="number"
                android:lines="1"
                android:maxLength="15"
                android:maxLines="1"
               android:padding="15dp"
                android:textSize="13sp"
                tools:ignore="TextFields" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="130dp"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/createProfileButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/black_corners"
                android:paddingStart="50dp"
                android:paddingTop="13dp"
                android:paddingEnd="50dp"
                android:paddingBottom="13dp"
                android:text="@string/create_profile"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/moveDriverButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/createProfileButton"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/black_corners"
                android:paddingStart="30dp"
                android:paddingTop="13dp"
                android:paddingEnd="30dp"
                android:paddingBottom="13dp"
                android:text="@string/create_profile_as_driver"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="12sp" />


        </RelativeLayout>


    </RelativeLayout>
</ScrollView>